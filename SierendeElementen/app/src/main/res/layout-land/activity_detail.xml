<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.harm.sierendeelementen.Presentation.DetailActivity">

    <TextView
        android:id="@+id/detailTitel_id"
        android:layout_width="314dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Titel van het element"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detailGeoLigging_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Geografische ligging"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailTitel_id" />

    <TextView
        android:id="@+id/detailKunstenaar_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:text="Kunstenaar:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailImage_id" />

    <TextView
        android:id="@+id/detailBeschrijving_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="9dp"
        android:text="Beschrijving:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailKunstenaar_id" />

    <TextView
        android:id="@+id/detailMateriaal_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Materiaal:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailBeschrijving_id" />

    <TextView
        android:id="@+id/detailOndergrond_id"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Ondergrond:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/detailMateriaal_id" />

    <TextView
        android:id="@+id/detailKText_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="17dp"
        android:text="Naam van de kunstenaar"
        app:layout_constraintStart_toEndOf="@+id/detailKunstenaar_id"
        app:layout_constraintTop_toBottomOf="@+id/detailImage_id" />

    <TextView
        android:id="@+id/detailBText_id"
        android:layout_width="478dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="9dp"
        android:text="Beschrijving van het object"
        app:layout_constraintStart_toEndOf="@+id/detailBeschrijving_id"
        app:layout_constraintTop_toBottomOf="@+id/detailKText_id" />

    <TextView
        android:id="@+id/detailMText_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="1dp"
        android:text="Beschrijving van het materiaal"
        app:layout_constraintStart_toEndOf="@+id/detailMateriaal_id"
        app:layout_constraintTop_toBottomOf="@+id/detailBText_id" />

    <TextView
        android:id="@+id/detailOText_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Beschrijving van de ondergrond"
        app:layout_constraintStart_toEndOf="@+id/detailOndergrond_id"
        app:layout_constraintTop_toBottomOf="@+id/detailMText_id" />

    <ImageView
        android:id="@+id/detailImage_id"
        android:layout_width="213dp"
        android:layout_height="176dp"
        android:layout_marginEnd="16dp"
        android:src="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="0dp" />
</android.support.constraint.ConstraintLayout>
